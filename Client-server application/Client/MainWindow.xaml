            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <view:LoginView Grid.Row="1" Grid.Column="1" Visibility="{Binding LoginVisibility}"></view:LoginView>
        <view:ChatView Grid.Row="2" Grid.Column="1" Visibility="{Binding ChatVisibility}"></view:ChatView>
        <view:GroupView Grid.Row="2" Grid.Column="1" Visibility="{Binding GroupMenuVisibility}"></view:GroupView>
        <view:EventLogView Grid.Row="2" Grid.Column="1" Visibility="{Binding EventLogVisibility}"></view:EventLogView>
    </Grid>-->

    <ContentControl Content="{Binding SelectedView}"/>
</Window>
